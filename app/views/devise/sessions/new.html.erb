<% title "Sign in" %>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
 <%= f.input :email %>
 <%= f.input :password %>


  <% if devise_mapping.rememberable? -%>
		<%= f.input :remember_me, :as => :boolean %> 
	<% end %>

 <%= f.submit "Sign in" %></p>
<% end %>


<% content_for(:options) do %>
	<h1>Options</h1>
	<%= render :partial => "devise/shared/links" %>
<% end %>
